file = {:Users/madeleine/Library/Application Support/Mendeley Desktop/Downloaded/Rosset et al. - 2017 - Phosphate deficiency promotes coral bleaching and is reflected by the ultrastructure of symbiotic dinoflagellates.pdf:pdf},
issn = {18793363},
journal = {Elsevier Marine Pollution Bulletin},
keywords = {Coral bleaching,Dinoflagellates,Eutrophication,Nutrient enrichment,Nutrient limitation,Symbiosis},
