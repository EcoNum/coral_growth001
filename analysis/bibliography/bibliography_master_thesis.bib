doi = {10.1016/j.jembe.2008.10.024},
file = {:Users/madeleine/Library/Application Support/Mendeley Desktop/Downloaded/Lirman, Manzello - 2009 - Patterns of resistance and resilience of the stress-tolerant coral Siderastrea radians (Pallas) to sub-optimal.pdf:pdf},
